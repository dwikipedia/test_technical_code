@{
    ViewBag.Title = "Booking Page";
}

@model BookMeetingRoom.Web.Models.BookViewModel

<main>
    <div class="container">
        <div class="col-lg-12">
            <h1>Book Meeting Room</h1>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @using (Html.BeginForm("Book", "Book", FormMethod.Post))
        {

            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-3">
                @Html.LabelFor(m => m.Time)
                @*<input asp-for="Time" class="form-control timepicker" placeholder="Select time" />*@
                @Html.TextBoxFor(m => m.Time, new { @class = "form-control timepicker", placeholder = "Select time" })
                @Html.ValidationMessageFor(m => m.Time, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-3">
                @Html.LabelFor(m => m.Duration)
                @*@Html.DropDownListFor(model => model.Duration, Model.DurationInMinutes, "-- Select Duration --", new { @class = "form-control" })*@

                @Html.DropDownListFor(m => m.Duration, Model.DurationInMinutes, "-- Select Duration --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NumOfPeople)
                @Html.TextBoxFor(m => m.NumOfPeople, new { @class = "form-control", type = "number" })
            </div>


            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Book</button>
            </div>
        }
    </div>
</main>

@section scripts {
    <script>
        $(function () {
            $('.timepicker').timepicker({
                timeFormat: 'h:mm a',
                interval: 15,
                minTime: '8:00am',
                maxTime: '6:00pm',
                defaultTime: '8:00am',
                dynamic: false,
                dropdown: true,
                scrollbar: true
            });
        });
    </script>
}

