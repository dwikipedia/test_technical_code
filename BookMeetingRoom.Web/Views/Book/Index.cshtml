@{
    ViewBag.Title = "Booking Page";
    var suggestions = ViewData["Suggestions"] as List<BookMeetingRoom.Web.Models.SuggestionViewModel>;
}

@model BookMeetingRoom.Web.Models.BookViewModel


<div class="container">
    <div class="col-lg-12 mb-4">
        <h1>Book Meeting Room</h1>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @using (Html.BeginForm("Book", "Book", FormMethod.Post))
    {

        @Html.AntiForgeryToken()

        <div class="form-group row mb-4">
            @Html.LabelFor(m => m.Name, new { @class = "col-form-label col-sm-2" })

            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group row mb-4">
            @Html.LabelFor(m => m.Time, new { @class = "col-form-label col-sm-2" })

            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Time, Model.TimeOptions, "-- Select Time --", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Time, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group row mb-4">
            @Html.LabelFor(m => m.Duration, new { @class = "col-form-label col-sm-2" })

            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.Duration, Model.DurationInMinutes, "-- Select Duration --", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Duration, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group row mb-4">
            @Html.LabelFor(m => m.NumOfPeople, new { @class = "col-form-label col-sm-2" })

            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.NumOfPeople, new { @class = "form-control", type = "number", max = "10" })
                @Html.ValidationMessageFor(m => m.NumOfPeople, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Book</button>
        </div>
    }

    @if (ViewData["Message"] != null)
    {
        <div class="card mt-5">
            <div class="card-body">
                <h5 class="card-title">WARNING!</h5>
                <h6 class="card-subtitle mb-2 text-muted">Booking failed</h6>
                <p class="card-text">

                    <div class="alert alert-warning">
                        @ViewData["Message"]
                    </div>
                </p>
            </div>
        </div>
    }

    @if (suggestions?.Any() == true)
    {
        <div class="col-lg-12 mt-5">
            <h3>Suggestion</h3>
            <h6 class="mb-2 text-muted">Click on the suggestion to fill in the form automatically.</h6>
        </div>

        <table class="table table-bordered table-hover text-center table-responsive-sm">
            <thead class="thead-dark bg-dark text-white">
                <tr>
                    @foreach (var s in suggestions)
                    {
                        <th>@s.RoomName</th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var s in suggestions)
                    {
                        <td>@($"{s.StartTime} to {s.EndTime}")</td>
                    }
                </tr>
            </tbody>
        </table>
    }
</div>

